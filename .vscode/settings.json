{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length",
        "85"
    ],
    "flake8.args": [
        "--max-line-length=85"
    ],
    "autoDocstring.docstringFormat": "numpy"
}